@{
    ViewBag.Title = "Actuals";
}
@section header
{
    <h2>Actuals</h2>
}
<section class="col-lg-12 col-md-12">
    @using (Html.BeginForm("GetActuals", "PrintJob", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div>
            <h3>
                1. Search Actual Print Date by Range
            </h3>
            <div>
                <table>
                    <tr>
                        <td>

                            <input class="datepicker" id="startDate" name="startdate" />
                            <span class="add-on">to</span>
                            <input class="datepicker" id="endDate" name="endDate" />
                        </td>
                        <td></td>
                        <td>
                            <span id="dateError" class="red-text shadow-on-text">invalid date range</span>
                        </td>
                    </tr>
                </table>
            </div>
            <br />
            <h3>
                2. Mailing Type
            </h3>
            <div>
                <select name="type" id="typeSelector" class="input-sm">
                    <option value="" disabled selected>choose a template</option>
                    @foreach (var type in ViewBag.PrintJobTypes)
                    {
                        <option value="@type.PrintJobTypeId">@type.PrintJobTypeDesc</option>
                    }
                </select>
            </div>
        </div>
        <br />
        <div>
            <table>
                <tr>
                    <td>
                        <input id="mailingTypeText" name="mailingTypeText" type="hidden" value="" />
                        <button id="getProjectionBtn" type="submit" class="btn btn-sm btn-primary">Get Count</button>
                    </td>
                    <td>
                        &nbsp;&nbsp;&nbsp;
                    </td>
                    <td>
                        @if (ViewBag.Count != null)
                        {
                            <div class="blue-text h4 shadow-on-text">Actual Count for @ViewBag.MailingType - @ViewBag.Count</div>
                        }
                    </td>
                </tr>
            </table>
        </div>
    }
</section>
@section scripts
{
    <script src="~/Scripts/custom/printjob_actual.js"></script>
    <script src="~/Scripts/bootstrap/bootstrap-datepicker.js"></script>
}
@section styles
{
    <link href="~/Content/custom/printjob_actual.css" rel="stylesheet" />
    <link href="~/Content/bootstrap/css/bootstrap-datepicker.css" rel="stylesheet" />
}


